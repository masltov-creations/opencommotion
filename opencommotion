#!/usr/bin/env bash
set -euo pipefail

SOURCE="${BASH_SOURCE[0]}"
while [[ -L "$SOURCE" ]]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  TARGET="$(readlink "$SOURCE")"
  if [[ "$TARGET" != /* ]]; then
    SOURCE="$DIR/$TARGET"
  else
    SOURCE="$TARGET"
  fi
done
ROOT="$(cd -P "$(dirname "$SOURCE")" && pwd)"

if command -v python3 >/dev/null 2>&1; then
  exec python3 "$ROOT/scripts/opencommotion.py" "$@"
fi
if command -v python >/dev/null 2>&1; then
  exec python "$ROOT/scripts/opencommotion.py" "$@"
fi

echo "python3 or python is required to run OpenCommotion." >&2
exit 1
