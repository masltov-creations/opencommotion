{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "opencommotion/types/artifact_bundle_v1.schema.json",
  "title": "ArtifactBundleV1",
  "type": "object",
  "required": ["artifact_id", "version", "title", "tags", "scene_entrypoint", "assets"],
  "properties": {
    "artifact_id": { "type": "string" },
    "version": { "type": "string" },
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "scene_entrypoint": { "type": "string" },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "type": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
